.page-header
  %h1
    = t('mongoid.models.' + resource_class.name.downcase)
    %small= t('admin.info.' + resource_class.name.downcase)
.well
  = link_to 'Back to list', collection_path, :class => 'btn large primary'
  = link_to 'Edit', edit_resource_path(resource), :class => 'btn large info'

.row
  .span16
    %table.zebra-striped
      %tbody
        %tr
          %td= ta User, :email
          %td= resource.email
        %tr
          %td= ta User, :username
          %td= resource.username
        %tr
          %td= ta User, :sign_in_count
          %td= resource.sign_in_count


