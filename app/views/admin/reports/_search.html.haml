.well
  = simple_form_for @search, :url => collection_path, :method => :get do |f|
    = f.input :user_id_equals, :as => :select, :collection => User.all.collect { |x| [x.username, x.id] }
    = f.input :current_date_gte, :as => :string, :input_html=> {:style=>"width:120px;height:20px", :onfocus => "javascript:HS_setDate(this)"}
    = f.input :current_date_lte, :as => :string, :input_html=> {:style=>"width:120px;height:20px", :onfocus => "javascript:HS_setDate(this)"}
    
    = f.button :submit, t('activerecord.attributes.report.search'), :class => 'btn middle success'