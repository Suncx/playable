.topbar{'data-scrollspy' => 'scrollspy', 'data-dropdown' => 'dropdown'}
  .topbar-inner
    .container
      = link_to image_tag("logo.png"), root_path, :class => 'brand'
      
      %ul.nav.main_menu
        = main_nav :home do
          = link_to t('layout.home'), root_path
        = main_nav :products do
          = link_to t('layout.products'), products_path
        = main_nav :jobs do
          = link_to t('layout.jobs'), pages_path('job')
        = main_nav :contacts do
          = link_to t('layout.about_us'), pages_path('about')

      %ul.nav.secondary-nav
        - unless user_signed_in?
          %li= link_to t('layout.sign_in'), new_user_session_path
        - else
          %li= link_to current_user.name, profile_path
          %li.dropdown
            = link_to t('layout.workspace'), '#', :class => 'dropdown-toggle'
            %ul.dropdown-menu
              %li= link_to t('layout.checkin'), events_path
              %li= link_to t('layout.add_report'), reports_path
              %li= link_to t('layout.add_post'), '#'
              
          %li.dropdown
            = link_to t('layout.account'), '#', :class => 'dropdown-toggle'
            %ul.dropdown-menu
              %li= link_to t('layout.profile_settings'), settings_path
              %li= link_to t('layout.password_settings'), edit_user_registration_path
              %li= link_to t('layout.blog_notifier', :count => 0), '#'
              %li= link_to t('layout.contact_notifier', :count => 0), '#'
              %li.divider
              %li= link_to t('layout.sign_out'), destroy_user_session_path, :mehtod => :delete
          
          %li.dropdown
            = link_to t('layout.langue'), '#', :class => 'dropdown-toggle'
            %ul.dropdown-menu
              %li= link_to t('layout.english'), :controller => controller.controller_name, :action => controller.action_name,:locale => 'en'
              %li= link_to t('layout.japanese'), :controller => controller.controller_name, :action => controller.action_name,:locale => 'jp'
              %li= link_to t('layout.chinese'), :controller => controller.controller_name, :action => controller.action_name,:locale => 'zh'
