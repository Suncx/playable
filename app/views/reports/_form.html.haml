= simple_form_for resource, :url => url, :html => { :id => resource.new_record? ? 'new_report' : 'edit_report' } do |f|
  .fieldset
    - if current_user.can_manage_reports?
      = f.input :score, :as => :select, :collection => 1..10, :prompt => true
      = f.input :comment, :as => :text, :input_html => { :class => 'xlarge', :rows => 5 }
    - else
      = f.input :plan, :input_html => { :class => 'xlarge', :rows => 5 }
      = f.input :content, :input_html => { :class => 'xlarge', :rows => 5 }
    
    .actions
      = f.button :submit, t('admin.actions.add'), :class => 'btn middle success'
      = button_tag 'Reset', :type => 'reset', :class => 'btn'