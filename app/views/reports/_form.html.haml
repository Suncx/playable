= simple_form_for @report, :url => url do |f|
  = f.input :user_id,:as => :hidden,:input_html => { :value => current_user.id }
  = f.input :current_date, :as => :string, :input_html => { :readonly => "readonly" }
  = f.input :plan, :as => :string, :input_html => { :readonly => "readonly"  }
  = f.input :goal, :as => :string, :input_html => { :readonly => "readonly"  }
  = f.input :content, :input_html => { :style => 'width:200px;height:120px' }
  .actions
    = f.button :submit, t('admin.actions.add'), :class => 'btn middle success'