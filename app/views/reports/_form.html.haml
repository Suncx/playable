    = f.input :plan, :label => false, :input_html => { :id => 'kindeditor_input' }
    = f.input :goal, :label => false, :input_html => { :id => 'kindeditor_input' }
    = f.input :content, :label => false, :input_html => { :id => 'kindeditor_input' }
