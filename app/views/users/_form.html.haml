= simple_form_for resource, :url => url  do |f|
  .fieldset
    = f.input :email, :input_html => { :readonly => true }
    = f.input :username
    = f.input :name
    = f.input :phone
    = f.input :birthdate, :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :order => [:year, :month, :day], :input_html => { :class => 'tiny' }
    = f.input :gender, :as => :radio, :collection => User.get_gender_values
    = f.input :bio, :input_html => { :class => 'xlarge', :rows => 5 }
    
    .actions
      = f.button :submit, :class => 'btn middle success'
      = button_tag 'Reset', :type => 'reset', :class => 'btn'