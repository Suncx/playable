= form_for @workday do |f|
  -if @workday.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workday.errors.count, "error")} prohibited this workday from being saved:"
      %ul
        - @workday.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :is_workday
    = f.check_box :is_workday
  .field
    = f.label :memo
    = f.text_field :memo
  .actions
    = f.submit 'Save'
